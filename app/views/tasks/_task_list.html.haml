.container
	-if @tasks.empty?
		%span.text-warning There are no tasks!
	- else
		%table.table.table-bordered{"table-layout": "auto"}
			%thead
				%tr
					%th Title
					%th Created At
					%th Completed
					%th Action
				%tbody
					-#- @tasks.each do |task|
					-#change @tasks to tasks bcos its mentioned in the rendering engine
					- tasks.each do |task|
						%tr
							%td
								%strong= task.title
							%td.text-info= task.created_at
							%td.text-succes= task.completed
							%td
								= link_to task_path(task), remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task #{task.title}?"} do
									%button.btn.btn-danger
										%span.glyphicon.glyphicon-trash
								= link_to edit_task_path(task), remote: true do
									%button.btn.btn-info
										%span.glyphicon.glyphicon-edit